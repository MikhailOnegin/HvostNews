<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:gravity="top">
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="@color/gray1" />
            <size
                android:height="1dp"
                android:width="10dp"/>
            <solid
                android:color="@color/gray1"/>
        </shape>
    </item>

    <item
        android:gravity="bottom">
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="@color/gray1" />
            <size
                android:height="1dp"
                android:width="10dp"/>
            <solid
                android:color="@color/gray1"/>
        </shape>
    </item>

</layer-list>