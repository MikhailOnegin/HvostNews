<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/graySelectorColor">

    <item
        android:id="@android:id/mask">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="@dimen/smallCorners"/>
            <solid
                android:color="@android:color/white"/>
        </shape>
    </item>

    <item>
        <layer-list>
            <item
                android:gravity="bottom">
                <shape
                    android:shape="rectangle">
                    <size
                        android:height="1dp"
                        android:width="1000dp"/>
                    <solid
                        android:color="@color/EditTextTextColorHints"/>
                </shape>
            </item>
        </layer-list>
    </item>

</ripple>