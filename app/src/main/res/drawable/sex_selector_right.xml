<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_selected="true">

        <shape
            android:shape="rectangle">

            <solid
                android:color="#141428"/>

            <corners
                android:topRightRadius="@dimen/smallCorners"
                android:bottomRightRadius="@dimen/smallCorners"/>

        </shape>

    </item>

    <item>

        <shape
            android:shape="rectangle">

            <stroke
                android:color="@color/sexSelector"
                android:width="2dp"/>

            <corners
                android:topRightRadius="@dimen/smallCorners"
                android:bottomRightRadius="@dimen/smallCorners"/>

        </shape>

    </item>

</selector>