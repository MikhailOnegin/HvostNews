<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/listItemElevation"
    android:orientation="vertical">

    <ru.hvost.news.presentation.customviews.RoundCornersImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/smallMargin"
        android:scaleType="centerCrop"
        app:cornersRadius="@dimen/xSmallCorners"
        app:outlineColor="@android:color/white"
        app:outlineWidth="@dimen/imageOutlineWidth"
        tools:src="@drawable/test_image" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/textMargin"
        android:lineSpacingMultiplier="1.15"
        android:fontFamily="@font/gilroy_bold"
        android:text="@string/stub"
        android:textColor="@color/gray1"
        android:textSize="@dimen/articleTitleTextSize" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normalMargin"
        android:lineSpacingMultiplier="1.25"
        android:fontFamily="@font/gilroy_semibold"
        android:text="@string/stub"
        android:textColor="@color/gray2"
        android:textSize="@dimen/articleDescriptionTextSize" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/categoryHeight"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/domain"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/background_category_item"
                android:fontFamily="@font/gilroy_semibold"
                android:gravity="center"
                android:paddingHorizontal="@dimen/smallMargin"
                android:text="@string/stub"
                android:textColor="@color/gray2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/categoryHeight"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/views"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/xSmallMargin"
                android:fontFamily="@font/gilroy_semibold"
                android:gravity="center_vertical"
                android:text="@string/stub"
                android:textColor="@color/gray3"
                android:textSize="@dimen/secondaryTextTextSize"
                app:drawableLeftCompat="@drawable/ic_views" />

            <TextView
                android:id="@+id/likes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:drawablePadding="@dimen/xSmallMargin"
                android:fontFamily="@font/gilroy_semibold"
                android:gravity="center_vertical"
                android:text="@string/stub"
                android:textColor="@color/gray3"
                android:textSize="@dimen/secondaryTextTextSize"
                app:drawableLeftCompat="@drawable/ic_likes" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>