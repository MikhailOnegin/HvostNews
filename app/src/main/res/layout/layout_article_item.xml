<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item_list"
    android:elevation="@dimen/listItemElevation"
    android:orientation="vertical"
    android:padding="@dimen/smallMargin">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/textMargin" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/textMargin" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/textMargin" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/categoryHeight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/domain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/background_category_item"
            android:paddingStart="@dimen/smallMargin"
            android:paddingEnd="@dimen/smallMargin"
            android:text="domain"
            android:textColor="@color/categoryText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/xSmallMargin"
            android:background="@drawable/background_category_item"
            android:paddingStart="@dimen/smallMargin"
            android:paddingEnd="@dimen/smallMargin"
            android:text="category"
            android:textColor="@color/categoryText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/domain"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/viewsImg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/xSmallMargin"
            android:src="@drawable/ic_views"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/views"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/views"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/xSmallMargin"
            android:paddingStart="@dimen/smallMargin"
            android:paddingEnd="@dimen/smallMargin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/likesImg"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/likesImg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/xSmallMargin"
            android:src="@drawable/ic_likes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/likes"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/smallMargin"
            android:paddingEnd="@dimen/smallMargin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>