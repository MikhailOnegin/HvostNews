<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/window_background"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:liftOnScroll="false"
        android:stateListAnimator="@null"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.Toolbar"
            app:navigationIcon="@drawable/ic_back"
            app:title="@string/makeOrderTitle"
            android:background="@android:color/transparent"
            app:layout_scrollFlags="scroll|snap|enterAlways"/>

        <View
            android:id="@+id/divider"
            android:background="@color/gray4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/container"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_scrollFlags="scroll|snap|enterAlways"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/MakeOrderTextTitle"
                android:text="@string/orderContactsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/largeMargin"
                android:layout_marginStart="@dimen/largeMargin"
                android:layout_marginEnd="@dimen/largeMargin"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:hint="@string/makeOrderNameHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/smallMargin"
                android:layout_marginStart="@dimen/largeMargin"
                android:layout_marginEnd="@dimen/largeMargin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/name"
                    style="@style/TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:hint="@string/makeOrderPhoneHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/smallMargin"
                android:layout_marginStart="@dimen/largeMargin"
                android:layout_marginEnd="@dimen/largeMargin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phone"
                    style="@style/TextInputEditText"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:hint="@string/makeOrderEmailHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/smallMargin"
                android:layout_marginStart="@dimen/largeMargin"
                android:layout_marginEnd="@dimen/largeMargin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email"
                    style="@style/TextInputEditText"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/MakeOrderTextTitle"
                android:text="@string/orderAddressTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xLargeMargin"
                android:layout_marginStart="@dimen/largeMargin"
                android:layout_marginEnd="@dimen/largeMargin"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:hint="@string/makeOrderCityHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/smallMargin"
                android:layout_marginStart="@dimen/largeMargin"
                android:layout_marginEnd="@dimen/largeMargin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/city"
                    style="@style/TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:hint="@string/makeOrderStreetHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/smallMargin"
                android:layout_marginStart="@dimen/largeMargin"
                android:layout_marginEnd="@dimen/largeMargin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/street"
                    style="@style/TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:hint="@string/makeOrderHouseHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/smallMargin"
                android:layout_marginStart="@dimen/largeMargin"
                android:layout_marginEnd="@dimen/largeMargin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/house"
                    style="@style/TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:hint="@string/makeOrderFlatHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/smallMargin"
                android:layout_marginStart="@dimen/largeMargin"
                android:layout_marginEnd="@dimen/largeMargin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/flat"
                    style="@style/TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/saveDataForFuture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/largeMargin"
                android:layout_marginTop="@dimen/largeMargin"
                android:layout_marginEnd="@dimen/largeMargin"
                android:text="@string/makeOrderSaveAddressHint"
                tools:ignore="RtlSymmetry"
                style="@style/CheckBox"/>

            <TextView
                style="@style/RegTextView"
                android:text="@string/makeOrderDeliveryHint"
                android:textColor="@color/TextColorLightSecondary"
                android:textSize="12sp"
                android:lineSpacingExtra="@dimen/smallTextLineSpacingExtra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/smallMargin"
                android:layout_marginStart="52dp"
                android:layout_marginEnd="@dimen/largeMargin"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0EBFA"
                android:layout_marginTop="@dimen/xLargeMargin"
                android:layout_marginStart="@dimen/smallMargin"
                android:layout_marginEnd="@dimen/smallMargin"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/countTitle"
                    style="@style/MakeOrderSummaryTextView.Secondary"
                    android:text="@string/makeOrderSummaryCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/xLargeMargin"
                    android:layout_marginStart="@dimen/largeMargin"/>

                <ru.hvost.news.presentation.customviews.DotFillerView
                    style="@style/DotFiller"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toEndOf="@id/countTitle"
                    app:layout_constraintEnd_toStartOf="@id/count"
                    app:layout_constraintTop_toTopOf="@id/countTitle"
                    app:layout_constraintBottom_toBottomOf="@id/countTitle"
                    android:layout_marginStart="@dimen/xSmallMargin"
                    android:layout_marginEnd="@dimen/xSmallMargin"/>

                <TextView
                    android:id="@+id/count"
                    style="@style/MakeOrderSummaryTextView"
                    android:text="@string/numberStub"
                    tools:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/xLargeMargin"
                    android:layout_marginEnd="@dimen/largeMargin"/>

                <TextView
                    android:id="@+id/discountTitle"
                    style="@style/MakeOrderSummaryTextView.Secondary"
                    android:text="@string/makeOrderSummaryDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/countTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:layout_marginStart="@dimen/largeMargin"/>

                <ru.hvost.news.presentation.customviews.DotFillerView
                    style="@style/DotFiller"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toEndOf="@id/discountTitle"
                    app:layout_constraintEnd_toStartOf="@id/discount"
                    app:layout_constraintTop_toTopOf="@id/discountTitle"
                    app:layout_constraintBottom_toBottomOf="@id/discountTitle"
                    android:layout_marginStart="@dimen/xSmallMargin"
                    android:layout_marginEnd="@dimen/xSmallMargin"/>

                <TextView
                    android:id="@+id/discount"
                    style="@style/MakeOrderSummaryTextView"
                    android:text="@string/numberStub"
                    tools:text="13,07%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/countTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:layout_marginEnd="@dimen/largeMargin"/>

                <TextView
                    android:id="@+id/discountSumTitle"
                    style="@style/MakeOrderSummaryTextView.Secondary"
                    android:text="@string/makeOrderSummaryDiscountSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/discountTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:layout_marginStart="@dimen/largeMargin"/>

                <ru.hvost.news.presentation.customviews.DotFillerView
                    style="@style/DotFiller"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toEndOf="@id/discountSumTitle"
                    app:layout_constraintEnd_toStartOf="@id/discountSum"
                    app:layout_constraintTop_toTopOf="@id/discountSumTitle"
                    app:layout_constraintBottom_toBottomOf="@id/discountSumTitle"
                    android:layout_marginStart="@dimen/xSmallMargin"
                    android:layout_marginEnd="@dimen/xSmallMargin"/>

                <TextView
                    android:id="@+id/discountSum"
                    style="@style/MakeOrderSummaryTextView"
                    android:text="@string/numberStub"
                    tools:text="13,07%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/discountTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:layout_marginEnd="@dimen/largeMargin"/>

                <TextView
                    android:id="@+id/deliveryTitle"
                    style="@style/MakeOrderSummaryTextView.Secondary"
                    android:text="@string/makeOrderSummaryDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/discountSumTitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:layout_marginStart="@dimen/largeMargin"
                    android:layout_marginBottom="@dimen/smallMargin"/>

                <ru.hvost.news.presentation.customviews.DotFillerView
                    style="@style/DotFiller"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toEndOf="@id/deliveryTitle"
                    app:layout_constraintEnd_toStartOf="@id/delivery"
                    app:layout_constraintTop_toTopOf="@id/deliveryTitle"
                    app:layout_constraintBottom_toBottomOf="@id/deliveryTitle"
                    android:layout_marginStart="@dimen/xSmallMargin"
                    android:layout_marginEnd="@dimen/xSmallMargin"/>

                <TextView
                    android:id="@+id/delivery"
                    style="@style/MakeOrderSummaryTextView"
                    android:text="@string/numberStub"
                    tools:text="13,07%"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/discountSumTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/normalMargin"
                    android:layout_marginEnd="@dimen/largeMargin"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/totalTitle"
                    style="@style/CartFooterTextView"
                    android:text="@string/cartFooterTotalTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="@dimen/largeMargin"
                    android:layout_marginTop="@dimen/largeMargin"/>

                <TextView
                    android:id="@+id/total"
                    android:text="@string/numberStub"
                    style="@style/CartFooterTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="@dimen/largeMargin"
                    android:layout_marginTop="@dimen/largeMargin"
                    tools:text="12 650 \u20bd"/>

                <Button
                    android:id="@+id/makeOrder"
                    style="@style/UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/buttonHeight"
                    android:text="@string/buttonFinishOrder"
                    app:layout_constraintTop_toBottomOf="@id/totalTitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="@dimen/largeMargin"
                    android:layout_marginStart="@dimen/largeMargin"
                    android:layout_marginEnd="@dimen/largeMargin"
                    android:layout_marginBottom="@dimen/largeMargin"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>