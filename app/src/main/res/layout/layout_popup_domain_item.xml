<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_popup_domain_item"
    android:elevation="@dimen/listItemElevation"
    android:orientation="horizontal"
    android:padding="@dimen/smallMargin">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/xSmallMargin"
        android:paddingEnd="0dp"
        android:text="@string/stub" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/smallImageHeight"
        android:layout_height="@dimen/smallImageHeight" />

</LinearLayout>