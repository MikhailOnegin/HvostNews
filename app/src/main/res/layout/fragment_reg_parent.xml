<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/windowBackground">

    <ImageView
        android:id="@+id/logo"
        android:contentDescription="@string/logoCD"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight"
        android:background="@android:color/white"
        android:src="@drawable/logo"
        android:scaleType="centerInside"
        android:paddingTop="@dimen/logoPadding"
        android:paddingBottom="@dimen/logoPadding"
        app:layout_constraintTop_toTopOf="parent"/>

    <ProgressBar
        android:id="@+id/progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progress="0"
        android:indeterminate="false"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:progressTint="@color/colorPrimary"/>

    <fragment
        android:id="@+id/host_fragment_registration"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"
        app:defaultNavHost="true"
        app:navGraph="@navigation/navigation_graph_registration"
        tools:ignore="FragmentTagUsage" />

</androidx.constraintlayout.widget.ConstraintLayout>