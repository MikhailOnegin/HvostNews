<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/windowBackground"
    android:orientation="vertical"
    tools:context=".presentation.fragments.profile.PetProfileFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:theme="@style/AppTheme.Toolbar"
        app:navigationIcon="@drawable/ic_back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/gilroy_medium"
            android:text="@string/petProfileTitle"
            android:textAppearance="@style/ToolbarTitleTextAppearance"
            android:textColor="@color/gray1"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray4_half_opacity" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/screenContentPadding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/smallMargin"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/smallMargin"
                    android:layout_weight="1"
                    android:hint="@string/petName"
                    app:hintTextColor="@color/gray4">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/name"
                        style="@style/TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gilroy_medium"
                        android:textStyle="bold" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/passport"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:backgroundTint="@color/gray4_half_opacity"
                    android:fontFamily="@font/gilroy_medium"
                    android:text="@string/petPassportButton"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    app:cornerRadius="@dimen/buttonShapeAppearanceCornerSize" />

            </LinearLayout>

            <Spinner
                android:id="@+id/type"
                style="@style/RegSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/regSexHeight"
                android:layout_marginTop="@dimen/normalMargin"
                android:layout_marginBottom="@dimen/normalMargin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sexMale"
                    style="@style/SexTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/sex_selector_left"
                    android:text="@string/sexMale" />

                <TextView
                    android:id="@+id/sexFemale"
                    style="@style/SexTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/sex_selector_middle"
                    android:text="@string/sexFemale" />

                <TextView
                    android:id="@+id/sexUnknown"
                    style="@style/SexTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/sex_selector_right"
                    android:text="@string/sexUnknown" />

            </LinearLayout>

            <TextView
                style="@style/ProfileTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/breed" />

            <Spinner
                android:id="@+id/breed"
                style="@style/RegSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/smallMargin" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/smallMargin"
                android:hint="@string/birthday"
                app:endIconDrawable="@drawable/ic_date"
                app:endIconMode="custom"
                app:endIconTint="@color/gray1"
                app:hintTextColor="@color/gray4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/birthday"
                    style="@style/TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:fontFamily="@font/gilroy_medium"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/smallMargin"
                android:hint="@string/food"
                app:hintTextColor="@color/gray4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/delicious"
                    style="@style/TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_medium"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                style="@style/ProfileTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/toy" />

            <!--TODO: Игрушка       -->
            <Spinner
                android:id="@+id/favToy"
                style="@style/RegSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/smallMargin"
                android:entries="@array/testItems" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/smallMargin"
                android:hint="@string/habbit"
                app:hintTextColor="@color/gray4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/badHabit"
                    style="@style/TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_medium"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/smallMargin"
                android:hint="@string/chip"
                app:hintTextColor="@color/gray4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/chip"
                    style="@style/TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_medium"
                    android:textStyle="bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--TODO: все свитчи     -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/largeMargin"
                android:layout_marginBottom="@dimen/largeMargin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/gilroy_medium"
                    android:gravity="center_vertical"
                    android:text="@string/presentations"
                    android:textColor="@color/gray1"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/switch_shows"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:thumb="@drawable/ic_baseline_brightness_1_24"
                    android:track="@drawable/track_selector" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/largeMargin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/gilroy_medium"
                    android:gravity="center_vertical"
                    android:text="@string/titules"
                    android:textColor="@color/gray1"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/switch_titules"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:thumb="@drawable/ic_baseline_brightness_1_24"
                    android:track="@drawable/track_selector" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/largeMargin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/gilroy_medium"
                    android:gravity="center_vertical"
                    android:text="@string/sport"
                    android:textColor="@color/gray1"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/switch_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:thumb="@drawable/ic_baseline_brightness_1_24"
                    android:track="@drawable/track_selector" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/largeMargin"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/gilroy_medium"
                    android:gravity="center_vertical"
                    android:text="@string/saloons"
                    android:textColor="@color/gray1"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/switch_saloons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:thumb="@drawable/ic_baseline_brightness_1_24"
                    android:track="@drawable/track_selector" />

            </LinearLayout>

            <TextView
                style="@style/ProfileTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/education" />

            <!--TODO: образование       -->
            <Spinner
                android:id="@+id/education"
                style="@style/RegSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/smallMargin"
                android:entries="@array/testItems" />

            <!--TODO: кнопка сохранить       -->
            <Button
                android:id="@+id/save"
                style="@style/ElevatedButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ButtonHeight"
                android:layout_marginBottom="@dimen/smallMargin"
                android:text="@string/saveChanges" />

            <!--TODO: кнопка отмены        -->

            <Button
                android:id="@+id/cancel"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallHeightButton"
                android:backgroundTint="@color/gray4_half_opacity"
                android:fontFamily="@font/gilroy_medium"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:cornerRadius="@dimen/buttonShapeAppearanceCornerSize" />

            <Button
                android:id="@+id/delete"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/smallHeightButton"
                android:fontFamily="@font/gilroy_bold"
                android:text="@string/delete"
                android:backgroundTint="@android:color/white"
                android:textAllCaps="false"
                android:textColor="@color/titleText"
                android:textSize="@dimen/ButtonTextSize"
                android:textStyle="bold"
                app:cornerRadius="@dimen/userProfileButtonLargeRadius"
                app:layout_constraintTop_toBottomOf="@+id/work"
                app:strokeColor="@color/btnStroke"
                app:strokeWidth="@dimen/strokeWidthOutlinedButton" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>