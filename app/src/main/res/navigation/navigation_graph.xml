<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="ru.hvost.news.presentation.fragments.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/myCouponsFragment"
        android:name="ru.hvost.news.presentation.fragments.coupons.MyCouponsFragment"
        android:label="My Coupons"
        tools:layout="@layout/fragment_my_coupons" >
        <action
            android:id="@+id/action_myCouponsFragment_to_couponFragment"
            app:destination="@+id/couponFragment"
            />
        <action
            android:id="@+id/action_myCouponsFragment_to_infoGetCouponsFragment"
            app:destination="@+id/infoGetCouponsFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/couponFragment"
        android:name="ru.hvost.news.presentation.fragments.coupons.CouponFragment"
        android:label="Coupon"
        tools:layout="@layout/fragment_coupon" />

    <fragment
        android:id="@+id/infoGetCouponsFragment"
        android:name="ru.hvost.news.presentation.fragments.coupons.InfoGetCouponsFragment"
        android:label="Coupons info"
        tools:layout="@layout/fragment_info_get_coupons" />

    <fragment
        android:id="@+id/parentsSchoolFragment"
        android:name="ru.hvost.news.presentation.fragments.school.ParentsSchoolFragment"
        android:label="Parents school"
        tools:layout="@layout/fragment_parents_school" />

    <fragment
        android:id="@+id/offlineCourseActiveFragment"
        android:name="ru.hvost.news.presentation.fragments.school.OfflineCourseActiveFragment"
        android:label="Offline course active"
        tools:layout="@layout/fragment_offline_course_active" />

    <fragment
        android:id="@+id/offlineCourseCompletedFragment"
        android:name="ru.hvost.news.presentation.fragments.school.OfflineCourseCompletedFragment"
        android:label="Offline course completed"
        tools:layout="@layout/fragment_offline_course_comleted" />

    <fragment
        android:id="@+id/onlineCourseActiveFragment"
        android:name="ru.hvost.news.presentation.fragments.school.OnlineCourseActiveFragment"
        android:label="Online course active"
        tools:layout="@layout/fragment_online_course_active" />

    <fragment
        android:id="@+id/onlineCourseLessonFragment"
        android:name="ru.hvost.news.presentation.fragments.school.OnlineCourseLessonFragment"
        android:label="Online course lesson"
        tools:layout="@layout/fragment_online_course_lesson" />

    <fragment
        android:id="@+id/onlineCourseNewFragment"
        android:name="ru.hvost.news.presentation.fragments.school.OnlineCourseNewFragment"
        android:label="OnlineCourseNewFragment"
        tools:layout="@layout/fragment_online_course_new" />
</navigation>