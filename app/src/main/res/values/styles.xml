<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/window_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColor">@color/TextColorDefault</item>
    </style>

    <style name="AppTheme.Toolbar">
        <item name="android:selectableItemBackground">?android:selectableItemBackground</item>
        <item name="android:colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="Spinner">
        <item name="background">?android:colorBackground</item>
    </style>

    <style name="TextView">
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:textColor">@color/TextColorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditText">
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textColor">@color/TextColorPrimary</item>
        <item name="android:textColorHint">@color/TextColorHints</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="ProfileTitleTextView">
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textColor">@color/gray4</item>
        <item name="android:textSize">@dimen/textTitleSize</item>
    </style>

    <style name="ButtonShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/buttonShapeAppearanceCornerSize</item>
    </style>

    <style name="ButtonTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="ElevatedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/ButtonTextSize</item>
        <item name="shapeAppearance">@style/ButtonShapeAppearance</item>
        <item name="backgroundTint">@color/elevated_button_background_tint</item>
    </style>

    <style name="UnelevatedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/ButtonTextSize</item>
        <item name="shapeAppearance">@style/ButtonShapeAppearance</item>
        <item name="backgroundTint">@color/elevated_button_background_tint</item>
    </style>

    <style name="UnelevatedButton.Gray">
        <item name="android:textColor">@color/TextColorPrimary</item>
        <item name="backgroundTint">@color/unelevatedButtonBackgroundTint</item>
    </style>

    <style name="bnvTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/EditTextTextColorHints</item>
        <item name="hintTextColor">@color/EditTextTextColorHints</item>
        <item name="boxStrokeColor">@color/edit_text_box_stroke_color</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="hintTextAppearance">@style/EditTextHintTextAppearance</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">@color/TextColorPrimary</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@style/EditTextTextAppearance</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor_drawable</item>
    </style>

    <style name="EditTextTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditTextHintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ScreenTitle">
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">@dimen/authorizationTitleTextSize</item>
        <item name="android:textColor">@color/TextColorPrimary</item>
    </style>

    <style name="RegSubtitle">
        <item name="android:textColor">@color/TextColorPrimary</item>
        <item name="android:textSize">@dimen/regSubtitleTextSize</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="RegTextTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:textSize">@dimen/secondaryTextTextSize</item>
    </style>

    <style name="RegSpinner">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:popupBackground">@drawable/spinner_popup_background</item>
    </style>

    <style name="SexTextView">
        <item name="android:textAppearance">@style/RegTextTextAppearance</item>
        <item name="android:textColor">@color/sex_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/smallMargin</item>
        <item name="android:paddingBottom">@dimen/smallMargin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/sexTextTextSize</item>
    </style>

    <style name="DatePicker">
        <item name="android:firstDayOfWeek">2</item>
        <item name="android:headerBackground">@color/colorPrimary</item>
        <item name="android:theme">@style/Dialog</item>
    </style>

    <style name="Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/TextColorPrimary</item>
    </style>

    <style name="DialogButtonMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- Made from Mikhail start -->
    <!-- View -->
    <style name="LineLightGray">
        <item name="android:background">@color/lineGray</item>
    </style>

    <!-- TextView -->
    <style name="TextViewToolbarTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:textColor">@color/gray1</item>
    </style>
    <!-- Button -->
    <style name="ButtonGray" parent="ElevatedButton">
        <item name="android:backgroundTint">@color/TextColorHints</item>
        <item name="android:textColor">@color/TextColorPrimary</item>
    </style>

    <style name="ButtonRoundedGray3" parent="ElevatedButton">
        <item name="background">@drawable/button_rounded</item>
        <item name="backgroundTint">@color/gray5</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="android:textColor">@color/gray3</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:backgroundTint">@color/lightGray</item>
        <item name="shapeAppearance">@style/ButtonShapeAppearance2</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="ButtonShapeAppearance2" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="ButtonBigPaddingMikhail" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="cornerSize">8dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- TabLayout -->
    <style name="TabLayout" parent="android:Widget.TabWidget">
        <item name="fontFamily">@font/gilroy_bold</item>
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <!-- Spinner -->
    <style name="Spinner2" parent="Widget.AppCompat.Spinner">
        <item name="background">?android:colorBackground</item>
        <item name="colorAccent">@color/EditTextTextColorHints</item>
        <item name="colorControlNormal">@color/EditTextTextColorHints</item>
        <item name="android:textColorSecondary">@color/EditTextTextColorHints</item>
        <item name="android:backgroundTint">@color/defaultBackground</item>
    </style>
    <!-- Made from Mikhail finish -->

    <style name="Toolbar" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="layout_scrollFlags">scroll|enterAlways|snap</item>
        <item name="android:background">@drawable/background_toolbar</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextAppearance</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/gilroy_semibold</item>
        <item name="android:textSize">@dimen/toolbarTitleTextSize</item>
    </style>

    <style name="RegTextView">
        <item name="android:textAppearance">@style/RegTextTextAppearance</item>
        <item name="android:textColor">@color/TextColorSecondary</item>
        <item name="android:lineSpacingExtra">@dimen/textLineSpacingExtra</item>
    </style>

    <style name="CartTypeTitleTextView">
        <item name="android:textSize">@dimen/cartTypeTitleTextSize</item>
        <item name="android:textColor">@color/TextColorPrimary</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
    </style>

    <style name="CartTypeTitleTextView.Counter">
        <item name="android:textSize">@dimen/cartTypeCounterTextSize</item>
        <item name="android:background">@drawable/background_cart_title_counter</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CartFooterTextView">
        <item name="android:textColor">@color/TextColorPrimary</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">@dimen/cartFooterMainTextSize</item>
    </style>

    <style name="CartFooterTextView.Secondary">
        <item name="android:textColor">#80000000</item>
        <item name="android:textSize">@dimen/cartFooterSecondaryTextSize</item>
    </style>

    <style name="MakeOrderTextTitle">
        <item name="android:textColor">@color/TextColorPrimary</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">@dimen/makeOrderTextTitleTextSize</item>
    </style>

    <style name="CheckBox">
        <item name="android:gravity">top</item>
        <item name="android:textAppearance">@style/RegTextTextAppearance</item>
        <item name="android:textColor">@color/TextColorSecondary</item>
        <item name="android:paddingStart">@dimen/smallMargin</item>
        <item name="android:button">@drawable/checkbox</item>
        <item name="android:lineSpacingExtra">@dimen/textLineSpacingExtra</item>
        <item name="useMaterialThemeColors">false</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="MakeOrderSummaryTextView">
        <item name="android:textSize">@dimen/makeOrderSummaryTextViewTextSize</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textColor">@color/TextColorPrimary</item>
    </style>

    <style name="MakeOrderSummaryTextView.Secondary">
        <item name="android:textColor">@color/TextColorLightSecondary</item>
    </style>

    <style name="DotFiller">
        <item name="dotSize">@dimen/dotFillerDotSize</item>
        <item name="dashSize">@dimen/dotFillerDashSize</item>
        <item name="dotColor">#B9BEE1</item>
    </style>

    <style name="TextViewWithDot">
        <item name="android:drawablePadding">@dimen/textViewWithDotPaddingStart</item>
        <item name="android:background">@drawable/background_text_view_dot</item>
        <item name="android:paddingStart">@dimen/largeMargin</item>
        <item name="android:textSize">@dimen/textViewWithDotTextSize</item>
        <item name="android:textColor">@color/TextColorPrimary</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:lineSpacingExtra">@dimen/textLineSpacingExtra</item>
    </style>

    <style name="TextViewOnColoredSheet">
        <item name="android:textSize">@dimen/textViewWithDotTextSize</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:lineSpacingExtra">@dimen/textLineSpacingExtra</item>
    </style>

    <style name="popupBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="tabsCustomStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tabTitleTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/gilroy_medium</item>
    </style>

</resources>